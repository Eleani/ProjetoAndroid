            android:name=".domain.ListaViagemActivity"
            android:label="@string/title_activity_lista_viagem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ListarVigemActivity" />
        <activity android:name=".ListarViagemActivity" />
